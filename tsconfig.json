{
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext"],
    "module": "esnext",
    "target": "esnext",
    "moduleResolution": "node",
    "paths": {
      "*": ["*"]
    },
    "types": [],
    "preserveConstEnums": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
